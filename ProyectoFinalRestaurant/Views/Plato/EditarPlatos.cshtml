@model IEnumerable<ProyectoFinalRestaurant.Models.Plato>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h3 {
            color: #007bff;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .form-control {
            width: 200px;
        }

        .add-link {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h3>LISTADO DE PLATOS</h3>
    <div>
        <label for="myInput">Buscar:</label>
        <input type="text" id="myInput" class="form-control" placeholder="Search..." />
    </div>

    <table>
        <tr>
            <th>CODIGO</th>
            <th>NOMBRE DEL PLATO</th>
            <th>DESCRIPCIÓN</th>
            <th>PRECIO</th>
            <th>MENÚ DEL DÍA</th>
            <th>Eliminar</th>
            <th>Modificar</th>
        </tr>
        <tbody id="myTable">
            <tr class="add-link">
                <td colspan="7"><a asp-action="nuevo">*NUEVO PLATO*</a></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPlato</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Precio</td>
                    <td>@item.MenuDelDia</td>
                    <td><a asp-action="Eliminar" asp-route-id="@item.IdPlato">Eliminar</a></td>
                    <td><a asp-action="Modificar" asp-route-id="@item.IdPlato">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
